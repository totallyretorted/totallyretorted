<% curvy_corners "login", :css_class => ['compact', 'modal'] do %>
	<% form_tag session_path do -%>
		<%= label_tag 'login' %>: <%= text_field_tag 'login', @login %>
		<%= label_tag 'password' %>: <%= password_field_tag 'password', nil %>
		<!-- <%= label_tag 'remember_me', 'remember?' %> <%= check_box_tag 'remember_me', '1', @remember_me %> -->
		<%= submit_tag 'Log in' %>
	<% end %>
	<%= button_to "Register", { :controller => 'users', :action => 'new' }, { :method => :get } %>
<% end -%>
