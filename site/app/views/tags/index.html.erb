<div class="yui-g">
	<%= render_toolbar %>
	<% curvy_corners do %>
		<% if @tags and @tags.size > 0 %>
			<ul>	
			<% for tag in @tags %>
				<%= render :partial => "li", :locals => { :t => tag } %>
			<% end %>
			</ul>
		<% else %>
			<span style="width:100%;text-align:center">No tags defined</span>
		<% end %>
	<% end %>
</div>
