<h1>New attribution</h1>

<% form_for(@attribution) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :who %><br />
    <%= f.text_field :who %>
  </p>
  <p>
    <%= f.label :where %><br />
    <%= f.text_field :where %>
  </p>
  <p>
    <%= f.label :how %><br />
    <%= f.text_field :how %>
  </p>
  <p>
    <%= f.label :why %><br />
    <%= f.text_field :why %>
  </p>
  <p>
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', attributions_path %>
