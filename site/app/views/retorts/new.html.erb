<h1>New retort</h1>

<% form_for(@retort) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
  	<%= f.label :tags %><br />
	<%= text_field :retort, :tags.value %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', retorts_path %>
