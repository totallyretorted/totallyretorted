<div style="width: 100%;" class="corn">
	<div class="corn-bd">
		<ul class="pop uno">
			<li>
				<span class="qr">&nbsp;</span>
				<%= @retort.content %>
			</li>
		</ul>
		<div id="retort-metadata" class="metadata">
			<% if @retort.attribution %>
				<div id="attribution">
					<!-- Request: Apply class to each type (SD) -->
					<% %w{ who what where how when }.each do |attrib| %>
						<% val = @retort.attribution.send attrib %>
						<% if val and val.size > 0 %>
							<div class="attrib"><%= val %></div>
						<% end %>
					<% end %>
				</div>
			<% end %>
			<div id="rating">
				thumbs up: <%= @retort.positive %>,&nbsp;thumbs down: <%= @retort.negative %>
				<% if logged_in? %>
				<br/>
				<!-- rate it! <%= link_to "awesome", :controller => 'vote', :action => 'thumbs_up'%>&nbsp;<%= link_to "sucks", :controller => 'vote', :action => 'thumbs_down'%> -->
				rate it! <%= link_to "awesome", new_retort_vote_path(@retort) %>&nbsp;<%= link_to "sucks", new_retort_vote_path(@retort) %>
				<% end -%>
			</div>
		</div>
	</div>
	<div style="opacity: 1;" class="bgnd">
	    <u class="w"></u><u class="e"></u>
	    <i class="w"></i><i class="e"></i>
	    <b class="w"></b><b class="e"></b>
	</div>
</div>
<%= render_tagcloud @tagcloud %>
